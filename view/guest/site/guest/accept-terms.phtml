<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \Omeka\Api\Representation\SiteRepresentation $site
 * @var \Omeka\Entity\User $user
 * @var \Guest\Form\AcceptTermsForm $form
 * @var string $text
 * @var string $page
 */

$plugins = $this->getHelperPluginManager();
$translate = $plugins->get('translate');

$breadcrumbs = $plugins->has('breadcrumbs') ? $plugins->get('breadcrumbs') : null;
$guestNavigation = $plugins->get('guestNavigation')();

$hasGuestNav = (bool) $guestNavigation->getContainer()->count();

$this->htmlElement('body')->appendAttribute('class', 'guest accept-terms');

$form->prepare();
?>

<?php if ($breadcrumbs && !$hasGuestNav): ?>
<?= $breadcrumbs() ?>
<?php endif; ?>

<?php if ($hasGuestNav): ?>
<nav class="navigation-guest">
    <?= $guestNavigation->menu()->renderMenu() ?>
</nav>
<?php endif; ?>

<?= $this->messages() ?>

<?= $this->pageTitle($translate('Accept terms and conditions')) ?>

<?php
// Build label with link to terms page, same as register form (Module.php).
$termsLabel = strip_tags(trim($text ?: ''), '<a><strong><em>');
if (!$termsLabel) {
    $termsLabel = $translate('I agree with terms and conditions.'); // @translate
}
if ($page && strpos($termsLabel, '<a') === false) {
    $termsUrl = $this->url('site/page', ['page-slug' => $page], [], true);
    $termsLabel = sprintf('%s <a href="%s" target="_blank">%s</a>', rtrim($termsLabel, '.'), $termsUrl, $page);
}
$form->get('guest_agreed_terms')->setOption('label', $termsLabel);
$form->get('guest_agreed_terms')->setLabelOption('disable_html_escape', true);
?>

<?= $this->form()->openTag($form) ?>
<?= $this->formCollection($form, false) ?>
<?php $this->trigger('view.add.form.after'); ?>
<div id="page-actions">
    <button type="submit" class="button"><?= $translate('Accept') ?></button>
</div>
<?= $this->form()->closeTag() ?>

<?php $this->trigger('view.add.after'); ?>
